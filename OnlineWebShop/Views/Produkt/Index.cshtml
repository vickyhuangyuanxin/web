@model IEnumerable<webshop.Models.Vare>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-home"></span></a>
    </div>
    <div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
  @foreach (var g in Model.GroupBy(g => g.ProduktMerke))
  {
    <li>
      <a href="#@Url.Content(@g.Key)">@g.Key</a>
    </li>
  }
          </ul> 
      </div>
    </div>
  </div>
</nav>
  @foreach (var g in Model.GroupBy(g => g.ProduktMerke))
  {
    <div style="padding-top:30px; height:130px;">
      <div id=@g.Key>
       <h3>@g.Key</h3>
      </div>
      <h4> Total items in this category: @g.Count()</h4>
    </div>
    foreach (var item in Model.Where(item => item.ProduktMerke == g.Key))
    {
      <table class="table">
        <tr>
          <td>Item ID: @item.VareId</td></tr>
        <tr><td>Items Name: @item.ProduktNavn</td>
        <tr><td>Price: @item.Pris</td></tr>
        <tr><td>@Html.ActionLink("Edit","Edit",new {id = item.VareId})</td></tr>
      </table>
    }
        }



